{
  "manifest_version": 2,
  "name": "Cookbook",
  "description": "A extension which changes the units for recipes to european units.",
  "version": "1.0",
  "icons": {
    "512": "icon.png"
  },
  "permissions": [
    "tabs", "http://*/*", "https://*/*"
  ],
  "content_scripts": [
    {
      "matches": ["http://*/*", "https://*/*"],
      "js": ["translator.js"],
      "run_at": "document_end"
    }
  ]
}
